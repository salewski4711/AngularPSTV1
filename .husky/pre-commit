#!/bin/sh

# ESLint Check f√ºr alle ge√§nderten TypeScript-Dateien
echo "üîç Pr√ºfe Code-Qualit√§t mit ESLint..."
CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|html)$')

if [ ! -z "$CHANGED_FILES" ]; then
  echo "$CHANGED_FILES" | xargs npx eslint
  
  if [ $? -ne 0 ]; then
    echo ""
    echo "‚ùå ESLint-Fehler gefunden! Bitte behebe diese vor dem Commit."
    echo "üí° Tipp: Nutze 'npm run lint:fix' f√ºr automatische Fixes"
    exit 1
  fi
fi

echo "‚úÖ Alle Checks bestanden!"